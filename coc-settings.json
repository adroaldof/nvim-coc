{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "go",
    "javascript",
    "javascriptreact",
    "json",
    "less",
    "markdown",
    "python",
    "scss",
    "svg",
    "tf",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],

  "python.linting.enabled": false,
  "python.formatting.blackPath": "black",
  "pyright.enable": true,
  "pyright.organizeimports.provider": "isort",
  "pyright.completion.importSupport": true,
  "pyright.completion.snippetSupport": true,

  "prettier.requireConfig": true,

  "eslint.autoFixOnSave": true,

  "tsserver.enable": true,
  "tsserver.log": "verbose",

  "yaml.completion": true,
  "yaml.enable": true,
  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,
  "yaml.format.singleQuote": false,
  "yaml.schemaStore.enable": true,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",
  "yaml.validate": true,

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  },

  "yaml.schemas": {
    "kubernetes": ["/*.yaml"]
  },

  "emmet.showExpandedAbbreviation": "always",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.directories": ["UltiSnips"],

  "suggest.noselect": false,
  "suggest.timeout": 5000,

  "diagnostic.errorSign": "âœ˜",
  "diagnostic.infoSign": "?",
  "diagnostic.checkCurrentLine": true
}
