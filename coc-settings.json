{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "less",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "python",
    "typescript",
    "typescriptreact",
    "svg",
    "go"
  ],

  "prettier.requireConfig": true,
  "prettier.disableSuccessMessage": true,

  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes":["javascript", "javascriptreact", "typescript", "typescriptreact"],

  "tsserver.enable": true,
  "tsserver.log": "verbose",

  "typescript.preferences.importModuleSpecifier": "auto",

  "python.pythonPath": "python",
  "python.venvPath":"/Users/adr/.local/share/virtualenvs",

  "python.jediEnabled": true,
  "python.jediPath": " /Users/adr/.local/share/virtualenvs/drf-api-NgGjwmfI/lib/python3.7/site-packages/jedi",
  "suggest.timeout":5000,

  "python.linting.enabled": true,
  "python.linting.pylintPath": "/Users/adr/.local/share/virtualenvs/drf-api-NgGjwmfI/bin/pylint",
  "python.linting.pylintArgs": ["--rcfile", "./.pylintrc"],
  "python.linting.flake8Enabled":false,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/Users/adr/.local/share/virtualenvs/drf-api-NgGjwmfI/bin/black",

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  },

  "emmet.showExpandedAbbreviation": "always",
  "emmet.includeLanguages": {"javascript": "javascriptreact", "typescript": "typescriptreact"},

  "explorer.width": 40,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.column.indent.indentLine": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,
  "explorer.previewAction.onHover": false, 
  "explorer.git.showIgnored": true,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  "suggest.noselect": false,

  "diagnostic.errorSign": "âœ˜",
  "diagnostic.infoSign": "?",
  "diagnostic.checkCurrentLine": true
}

